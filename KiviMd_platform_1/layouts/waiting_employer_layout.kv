#:import utils kivy.utils
#:import LoginButton custom_classes
<Screen_waiting_employer@Screen>:
    Screen:
        MDBoxLayout:
            FloatLayout:
                MDSliverAppbar:
                    id: top
                    background_color: get_color_from_hex('#ff9800')


                    MDSliverAppbarHeader:

                        MDRelativeLayout:
                            Label:
                                text: "Job-A-Student"
                                font_name: "Forte"
                                font_size: 50
                                color: utils.get_color_from_hex('#ff9800')

                    MDSliverAppbarContent:
                        id: content
                        orientation: "vertical"
                        padding: "12dp"
                        spacing: "12dp"
                        adaptive_height: True


            Splitter:
                sizable_from: 'left'
                max_size: self.parent.width/1.5
                min_size: self.parent.width/4
                strip_size: 3


                ScreenManager:
                    id : content_view

