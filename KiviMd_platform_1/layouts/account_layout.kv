<Screen_account@Screen>:
    Screen:
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#ececec')
            Rectangle:
                pos: self.pos
                size: self.width, 50

        canvas:
            Color:
                rgb: utils.get_color_from_hex('#ff9800')
            Rectangle:
                pos: self.x, self.height-50
                size: self.width, 50
        MDFloatLayout:

            Label:
                text: "Name"
                pos_hint: {"center_x": .3, "center_y": .89}
                color: 0,0,0
                size: "48dp", "48dp"
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": .3, "center_y": .75}
                size_hint: .4, .2
                line_color: utils.get_color_from_hex('#ff9800')
                line_width: 1.4
                padding: 30
                MDTextField:
                    id: name
                    text_color_focus: 0,0,0
                    size: "48dp", "48dp"
                    text: "WRITE YOUR NAME HERE"

            Label:
                text: "Description"
                color: 0,0,0
                pos_hint: {"center_x": .3, "center_y": .55}
                size: "48dp", "48dp"

            MDBoxLayout:
                orientation: "vertical"
                size_hint: .4, .4
                pos_hint: {"center_x": .3, "center_y": .32}
                size_hint: .4, .4
                line_color: utils.get_color_from_hex('#ff9800')
                line_width: 1.4
                padding: 20

                MDTextField:
                    id: desc
                    text_color_focus: 0,0,0
                    size_hint: 1,.1
                    multiline: True
                    max_text_length: 600
                    text: "WRITE YOURE DESCRIPTION HERE"

            Label:
                text: "Image"
                pos_hint: {"center_x": .75, "center_y": .89}
                color: 0,0,0
                size: "48dp", "48dp"
            MDBoxLayout:
                orientation: "vertical"
                size_hint: .4, .6
                pos_hint: {"center_x": .75, "center_y": .55}
                line_color: utils.get_color_from_hex('#ff9800')
                line_width: 1.4
                FitImage:
                    id: img
                    source: "1.png"


            MDRectangleFlatButton:
                text: "Upload Image"
                pos_hint: {"center_x": .64, "center_y": .175}
                size_hint: .2, .1
                line_width: 1.4
                on_release: root.pick_file()
            MDRectangleFlatButton:
                text: "Save"
                line_color: 0,1,0
                text_color: 0,1,0
                pos_hint: {"center_x": .86, "center_y": .175}
                size_hint: .2, .1
                line_width: 1.4
                on_release: root.save_account()